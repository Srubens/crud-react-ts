{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2016",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@components":["src/components"],
      "@components/*":["src/components/*"],
      "@hooks":["src/hooks"],
      "@hooks/*":["src/hooks/*"],
      "@core":["src/core"],
      "@core/*":["src/core/*"],
      "@backend":["src/backend"],
      "@backend/*":["src/backend/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
